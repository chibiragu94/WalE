<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Waie" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <!--Text styles-->
    <style name="main_page_title_style" >
        <item name="android:layout_marginStart">@dimen/activity_main_title_end_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_main_title_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_main_title_end_margin</item>
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="main_page_explanation_style" >
        <item name="android:layout_marginStart">@dimen/activity_main_title_end_margin</item>
        <item name="android:layout_marginTop">@dimen/activity_main_title_top_margin</item>
        <item name="android:layout_marginEnd">@dimen/activity_main_title_end_margin</item>
        <item name="android:textSize">@dimen/explanation_text_size</item>
        <item name="android:textColor">@color/black</item>
    </style>

</resources>